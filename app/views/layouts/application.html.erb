<!DOCTYPE html>
<html>
<head>
  <title>OCTF</title>
	<%= favicon_link_tag "favicon.ico" %>
	<link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700' rel='stylesheet' type='text/css'>
	<%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	
		
	<% if current_user %>
	
		<header class="header-wrap">
			<nav class="navbar group">
				<h1 class="logo"><a href="<%= root_url %>">OCTF</a></h1>
				<form class="chosen-form" action="" method="GET">
					<%= auth_token %>
	
					<select class="chosen-select">
						<% Athlete.all.each do |athlete| %>
							<option value="<%= athlete.id %>"><%= athlete.name %></option>
						<% end %>
					</select>
	
					<input type="submit" value="Go">
	
				</form>
				
			
				<ul class="nav-list">
					<li class="nav-list-item"><a href="<%= home_url %>">Home</a></li>
					<li class="nav-list-item"><a href="<%= athletes_url %>">All Athletes</a></li>
					<li class="nav-list-item"><a href="<%= records_url %>">School Records</a></li>
					<li class="nav-list-item"><%= button_to "Sign Out", session_url, method: :delete %></li>
					<% if current_user.admin? %>
						<li class="nav-list-item"><%= link_to "Add Athlete", new_athlete_url %></li>
					<% end %>
				</ul>
			</nav>
		
		</header>
	
	<% end %>
	
	<div id="container">

		<% if flash[:notice] %>
			<div class="flash-notice"><%= flash[:notice] %></div>
		<% end %>
		<% if flash[:errors] %>
			<div class="flash-error"><%= flash[:errors].join(", ") %></div>
		<% end %>
		<%= yield %>
	
		<% if current_user && current_user.type = "Admin" %>
			<div class="params"><%= debug params %></div>
		<% end %>
	
	</div>
	
</body>
</html>
