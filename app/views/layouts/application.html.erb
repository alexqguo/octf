<!DOCTYPE html>
<html>
<head>
  <title>OCTF</title>
	<%= favicon_link_tag "favicon.ico" %>
	<link href='http://fonts.googleapis.com/css?family=Roboto:300,400,500' rel='stylesheet' type='text/css'>
	<%= stylesheet_link_tag "application" %>
  	<%= javascript_include_tag "application" %>
  	<%= csrf_meta_tags %>
</head>
<body>
	
		
	<% if current_user %>
	
		<header class="header-wrap">
			<nav class="navbar group">
				<h1 class="logo"><a href="<%= root_url %>">OCTF</a></h1>
				<form class="chosen-form" action="" method="GET">
					<%= auth_token %>
	
					<select class="chosen-select">
						<% Athlete.all.each do |athlete| %>
							<option value="<%= athlete.id %>"><%= athlete.name %></option>
						<% end %>
					</select>
	
					<input type="submit" value="Go">
	
				</form>
				
			
				<ul class="navlist">
					<li class="navlist-item"><a href="<%= home_url %>">Home</a></li>
					<li class="navlist-item"><a href="<%= athletes_url %>">All Athletes</a></li>
					<li class="navlist-item"><a href="<%= records_url %>">School Records</a></li>
					<% if current_user.admin? %>
						<li class="navlist-item"><%= link_to "Add Athlete", new_athlete_url %></li>
					<% end %>
					<li class="navlist-item"><%= button_to "Sign Out", session_url, method: :delete %></li>
				</ul>
			</nav>
		
		</header>
	
	<% end %>
	
	<div id="container">

		<% if flash[:notice] %>
			<div class="flash-notice"><%= flash[:notice] %></div>
		<% end %>
		<% if flash[:errors] %>
			<div class="flash-error">
				<%= flash[:errors].is_a?(Array) ? flash[:errors].join(", ") : flash[:errors] %>
			</div>
		<% end %>
		<%= yield %>
	
	</div>
	
</body>
</html>
